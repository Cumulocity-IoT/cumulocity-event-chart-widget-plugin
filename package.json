  "scripts": {
    "start": "c8ycli server",
    "build": "c8ycli build --env.mode=production",
    "deploy": "c8ycli deploy",
    "postinstall": "ngcc",
    "prebuild": " gulp clean",
    "postbuild": " gulp bundle"
  },
